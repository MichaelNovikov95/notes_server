{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist", // Specify where TypeScript files should be compiled to
    "rootDir": "./src", // Specify your source directory
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts", // Adjust this path to match your directory structure
    "src/server.mjs"
  ]
}
